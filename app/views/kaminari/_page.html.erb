<% theme = local_assigns[:pagination_theme] || 'light' %>

<% if page.current? %>
  <li class="page-item active <%= theme %>-page-item">
    <%= content_tag :a,
          page,
          data: { remote: remote },
          rel: page.rel,
          class: 'page-link theme-page-link' %>
  </li>
<% else %>
  <li class="page-item <%= theme %>-page-item">
    <%= link_to page,
          url,
          remote: remote,
          rel: page.rel,
          class: 'page-link theme-page-link' %>
  </li>
<% end %>
