  <!-- content -->
  <div>
    <h1>Features</h1>
    <p>Explore the powerfull features of our financial management system</p>
  </div>

  <hr>

  
  <!-- Cards -->
  <div class="row g-4">

    <!-- Accounts -->
    <div class="col-sm-6 col-lg-3">
      <div class="card h-100 shadow-sm border-0">
        <div class="card-body text-center">
          <i class="bi bi-bank fs-1 text-primary mb-3"></i>
          <h5 class="card-title">Manage Accounts</h5>
          <p class="card-text text-muted">
            Easily manage your bank accounts and track balances.
          </p>
          <%= link_to "Learn more", accounts_path, class: "btn btn-link" %>
        </div>
      </div>
    </div>

    <!-- Transactions -->
    <div class="col-sm-6 col-lg-3">
      <div class="card h-100 shadow-sm border-0">
        <div class="card-body text-center">
          <i class="bi bi-arrow-left-right fs-1 text-success mb-3"></i>
          <h5 class="card-title">Track Transactions</h5>
          <p class="card-text text-muted">
            Record and categorize your income and expenses.
          </p>
          <%= link_to "Learn more", transactions_path, class: "btn btn-link" %>
        </div>
      </div>
    </div>

    <!-- Budgets -->
    <div class="col-sm-6 col-lg-3">
      <div class="card h-100 shadow-sm border-0">
        <div class="card-body text-center">
          <i class="bi bi-pie-chart fs-1 text-warning mb-3"></i>
          <h5 class="card-title">Set Budgets</h5>
          <p class="card-text text-muted">
            Plan and monitor your monthly budgets.
          </p>
          <%= link_to "Learn more", budgets_path, class: "btn btn-link" %>
        </div>
      </div>
    </div>

    <!-- Reports -->
    <div class="col-sm-6 col-lg-3">
      <div class="card h-100 shadow-sm border-0">
        <div class="card-body text-center">
          <i class="bi bi-graph-up fs-1 text-info mb-3"></i>
          <h5 class="card-title">View Reports</h5>
          <p class="card-text text-muted">
            View detailed financial reports and charts.
          </p>
          <%= link_to "Learn more", root_path, class: "btn btn-link" %>
        </div>
      </div>
    </div>
  </div>

    <!-- CTA -->
    <div class="text-center mt-5">
      <h5 class="fw-bold mb-3">
        Ready to take control of your finances?
      </h5>
      <%= link_to "Get Started", root_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
</div>