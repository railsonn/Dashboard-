<div class="container-fluid py-4">
  <div class="row">
    <div class="col-lg-8 col-xl-6">

      <div class="card shadow-sm">
        <div class="card-body">

          <h4 class="mb-4">Preferences</h4>

          <%= form_with url: settings_update_preferences_path, method: :patch, local: true do |f| %>
            
            <!-- Language -->
            <div class="mb-3">
              <%= f.label :language, "Language", class: "form-label" %>
              <%= f.select :language,
                    [["English", "en"], ["PortuguÃªs", "pt-BR"]],
                    {},
                    class: "form-select" %>
            </div>

            <!-- Currency -->
            <div class="mb-3">
              <%= f.label :currency, "Currency", class: "form-label" %>
              <%= f.select :currency,
                    [["USD - US Dollar", "USD"], ["BRL - Brazilian Real", "BRL"]],
                    {},
                    class: "form-select" %>
            </div>

            <!-- Theme -->
            <div class="mb-4">
              <label class="form-label d-block">Theme</label>

              <div class="form-check form-check-inline">
                <%= f.radio_button :theme, "light", class: "form-check-input" %>
                <%= f.label :theme_light, "Light", class: "form-check-label" %>
              </div>

              <div class="form-check form-check-inline">
                <%= f.radio_button :theme, "dark", class: "form-check-input" %>
                <%= f.label :theme_dark, "Dark", class: "form-check-label" %>
              </div>

              <div class="form-check form-check-inline">
                <%= f.radio_button :theme, "auto", class: "form-check-input" %>
                <%= f.label :theme_auto, "Auto", class: "form-check-label" %>
              </div>
            </div>

            <!-- Date Format -->
            <div class="mb-3">
              <%= f.label :date_format, "Date Format", class: "form-label" %>
              <%= f.select :date_format,
                    [["DD/MM/YYYY", "dd/mm/yyyy"], ["MM/DD/YYYY", "mm/dd/yyyy"]],
                    {},
                    class: "form-select" %>
            </div>

            <!-- Number Format -->
            <div class="mb-4">
              <%= f.label :number_format, "Number Format", class: "form-label" %>
              <%= f.select :number_format,
                    [["1.234,56", "pt"], ["1,234.56", "en"]],
                    {},
                    class: "form-select" %>
            </div>

            <div class="d-flex justify-content-end">
              <%= f.submit "Save Changes", class: "btn btn-primary px-4" %>
            </div>

          <% end %>

        </div>
      </div>

    </div>
  </div>

  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>
