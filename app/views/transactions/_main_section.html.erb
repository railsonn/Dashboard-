<div class="table-responsive">
  <table class="table table-striped table-hover align-middle mb-0">
    <thead class="text-uppercase small">
      <tr>
        <th>ID</th>
        <th>Transaction Date</th>
        <th>Description</th>
        <th>Amount</th>
        <th>Type</th>
        <th class="text-center">Actions</th>
      </tr>
    </thead>
    
    <tbody>
      <% transactions.each_with_index do |transaction, index| %>
        <tr>
          <td style="<%= background_tr(index) %> font-weight: bold">
            <%= transaction.id %>
          </td>

          <td style="<%= background_tr(index) %> font-weight: medium">
            <%= transaction.transaction_date %>
          </td>

          <td style="<%= background_tr(index) %> font-weight: medium">
            <%= transaction.description %>
          </td>

          <td style="<%= background_tr(index) %> font-weight: bold">
            <%= number_to_currency(transaction.amount) %>
          </td>
          
          <td style="<%= background_tr(index) %>">
            <span class="badge <%= transaction.transaction_type == 'income' ? 'bg-success' : 'bg-danger' %> text-uppercase small">
              <%= transaction.transaction_type %>
            </span>
          </td>

        
          <td class="text-center d-flex gap-2 justify-content-center" style="<%= background_tr(index) %>">
            <%= link_to 'View',
              transaction_path(transaction),
              class: "btn btn-sm btn-outline-primary fw-semibold" %>

            <%= link_to 'Edit',
              edit_transaction_path(transaction),
              class: "btn btn-sm btn-outline-warning fw-semibold" %>

            <%= link_to 'Delete',
              transaction_path(transaction),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: "btn btn-sm btn-outline-danger fw-semibold" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-end align-items-center mt-3">
    <%= paginate @transactions %>
  </div>
</div>