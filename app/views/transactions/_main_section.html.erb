<div class="table-responsive" id="pages-table-<%= @theme %>">
  <table class="table table-striped table-hover align-middle mb-0">
    <thead class="text-uppercase small">
      <tr>
        <th>ID</th>
        <th>Transaction Date</th>
        <th>Description</th>
        <th>Amount</th>
        <th>Type</th>
        <th class="text-center">Actions</th>
      </tr>
    </thead>
    
    <tbody>
      <% transactions.each_with_index do |transaction, index| %>
        <tr>
          <td class="fw-bold">
            <%= transaction.id %>
          </td>

          <td class="fw-bold">
            <%= transaction.transaction_date %>
          </td>

          <td class="fw-medium">
            <%= transaction.description %>
          </td>

          <td class="fw-bold">
            <%= number_to_currency(transaction.amount) %>
          </td>
          
          <td>
            <span class="badge <%= transaction.transaction_type == 'CREDIT' ? 'bg-success text-light' : 'bg-danger  text-light' %> text-uppercase small">
              <%= transaction.transaction_type %>
            </span>
          </td>

        
          <td class="text-center d-flex gap-2 justify-content-center">
            <%= link_to 'View',
              transaction_path(transaction),
              class: "btn btn-sm btn-outline-primary fw-semibold" %>

            <%= link_to 'Edit',
              edit_transaction_path(transaction),
              class: "btn btn-sm btn-outline-warning fw-semibold" %>

            <%= link_to 'Delete',
              transaction_path(transaction),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: "btn btn-sm btn-outline-danger fw-semibold" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-end align-items-center mt-3">
    <%= paginate @transactions %>
  </div>
</div>