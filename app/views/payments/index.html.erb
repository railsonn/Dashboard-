<div id="mainContent">
  <div class="card shadow-sm" id="card-primary">
    <div class="card-body" id="card-secondary">
      <h6 class="mb-3">Evolução Financeira</h6>

      <div class="line-chart-wrapper">
        <svg viewBox="0 0 520 280" preserveAspectRatio="none" class="w-100 h-100">

          <!-- ===== EIXO Y (valores) ===== -->
          <text x="0" y="50"  fill="#8a8fa3" font-size="10">8k</text>
          <text x="0" y="90"  fill="#8a8fa3" font-size="10">6k</text>
          <text x="0" y="130" fill="#8a8fa3" font-size="10">4k</text>
          <text x="0" y="170" fill="#8a8fa3" font-size="10">2k</text>
          <text x="0" y="210" fill="#8a8fa3" font-size="10">0</text>

          <!-- ===== GRID ===== -->
          <line x1="30" y1="50"  x2="500" y2="50"  stroke="#2a2f45"/>
          <line x1="30" y1="90"  x2="500" y2="90"  stroke="#2a2f45"/>
          <line x1="30" y1="130" x2="500" y2="130" stroke="#2a2f45"/>
          <line x1="30" y1="170" x2="500" y2="170" stroke="#2a2f45"/>
          <line x1="30" y1="210" x2="500" y2="210" stroke="#2a2f45"/>

          <!-- ===== RECEITAS ===== -->
          <polyline
            fill="none"
            stroke="#0d6efd"
            stroke-width="2.5"
            points="50,70 150,60 250,50 350,55 450,45"
          />

          <!-- ===== DESPESAS ===== -->
          <polyline
            fill="none"
            stroke="#dc3545"
            stroke-width="2.5"
            points="50,110 150,120 250,130 350,125 450,140"
          />

          <!-- ===== SALDO ===== -->
          <polyline
            fill="none"
            stroke="#198754"
            stroke-width="2.5"
            points="50,160 150,150 250,140 350,145 450,135"
          />

          <!-- ===== OPEN INVOICES ===== -->
          <polyline
            fill="none"
            stroke="#ffc107"
            stroke-width="2.5"
            points="50,190 150,185 250,180 350,175 450,170"
          />

          <!-- ===== MESES (EIXO X) ===== -->
          <text x="45"  y="260" fill="#8a8fa3" font-size="10">Jan</text>
          <text x="145" y="260" fill="#8a8fa3" font-size="10">Fev</text>
          <text x="245" y="260" fill="#8a8fa3" font-size="10">Mar</text>
          <text x="345" y="260" fill="#8a8fa3" font-size="10">Abr</text>
          <text x="445" y="260" fill="#8a8fa3" font-size="10">Mai</text>

        </svg>
      </div>

      <!-- Legenda -->
      <div class="d-flex flex-wrap gap-3 mt-3 small" id="div-text-legend">
        <div>
          <span class="text-primary fw-semibold">●</span>
          <span class="text-legend">Receitas</span>
        </div>

        <div>
          <span class="text-danger fw-semibold">●</span>
          <span class="text-legend">Despesas</span>
        </div>

        <div>
          <span class="text-success fw-semibold">●</span>
          <span class="text-legend">Saldo</span>
        </div>

        <div>
          <span class="text-warning fw-semibold">●</span>
          <span class="text-legend">Open invoices</span>
        </div>
      </div>

    </div>


    <!-- Grafico de barras -->


    <div class="card-body" id="card-grafico-barra">
      <h6 class="mb-3">Receitas x Despesas (Mensal)</h6>

      <div class="bar-chart-wrapper d-flex justify-content-around align-items-end">

        <!-- ===== JANEIRO ===== -->
        <div class="text-center">
          <div class="bars">
            <!-- Receita -->
            <div class="bar receita" style="height: 100%;">
              <small>R$ 24.923</small>
            </div>

            <!-- Despesa -->
            <div class="bar despesa" style="height: 55%;">
              <small>R$ 13.754</small>
            </div>
          </div>
          <span class="month">Jan</span>
        </div>

        <!-- ===== FEVEREIRO ===== -->
        <div class="text-center">
          <div class="bars">
            <!-- Receita -->
            <div class="bar receita" style="height: 60%;">
              <small>R$ 15.000</small>
            </div>

            <!-- Despesa -->
            <div class="bar despesa" style="height: 80%;">
              <small>R$ 20.000</small>
            </div>
          </div>
          <span class="month">Fev</span>
        </div>

      </div>

      <!-- Legenda -->
      <div class="d-flex gap-4 justify-content-center mt-4 small">
        <span class="text-primary fw-semibold">■ Receitas</span>
        <span class="text-danger fw-semibold">■ Despesas</span>
      </div>
    </div>
  </div>
</div>


